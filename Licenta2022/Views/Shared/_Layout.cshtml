@using React.AspNet;

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/dist/main.css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div id="viewport">
        <!-- Sidebar -->
        <div id="sidebar">
            <header>
                <a href="#">Medi Cal</a>
            </header>
            <ul class="nav">
                <li>
                    <a href="/Pacient">
                        Pacienti
                    </a>
                </li>
                <li>
                    <a href="/Programare">
                        Programari
                    </a>
                </li>
                <li>
                    <a href="/Trimitere">
                        Trimiteri
                    </a>
                </li>
                <li>
                    <a href="/Doctor">
                        Doctori
                    </a>
                </li>
                <li>
                    <a href="/Clinica">
                        Clinici
                    </a>
                </li>
                <li>
                    <a data-toggle="dropdown" href="#">Altele
                        <span class="caret"></span>
                    </a>

                    <ul class="dropdown-menu">
                        <li><a href="/Asigurare">Asigurari</a></li>
                        <li><a href="/Adresa">Adrese</a></li>
                        <li><a href="/Localitate">Localitati</a></li>
                        <li><a href="/Medicament">Medicamente</a></li>
                        <li><a href="/Serviciu">Servicii</a></li>
                        <li><a href="/Specializare">Specializari</a></li>
                        <li><a href="/Factura">Facturi</a></li>
                        <li><a href="/ProgramTemplate">Program</a></li>

                    </ul>
                </li>
            </ul>
        </div>
        <!-- Content -->
        <div id="content">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/dist/runtime.js"></script>
    <script src="~/dist/vendor.js"></script>
    <script src="~/dist/main.js"></script>
    @Html.ReactInitJavaScript()


</body>

</html>
