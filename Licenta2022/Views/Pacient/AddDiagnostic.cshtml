@model Licenta2022.Models.PacientAddDiagnosticForm

@{
    ViewBag.Title = "Diagnostic";
}

<h2>Diagnostic pentru @ViewBag.NumePacient</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPacient)
        @Html.HiddenFor(model => model.IdProgramare)

        <div class="form-group">
            <label class="col-md-2"></label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdDiagnostic, new SelectList(ViewBag.Diagnostics, "Value", "Text"),
            "Diagnostic", new { @class = "form-control form-title" })
                @Html.ValidationMessage("IdDiagnostic", null, new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adaugă" class="btn btn-default" />
            </div>
        </div>

    </div>
}
