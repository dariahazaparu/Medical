@model Licenta2022.Models.PacientAddDiagnosticForm

@{
    ViewBag.Title = "AddDiagnostic";
}

<h2>AddDiagnostic</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Pacient</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPacient)
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Nume)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Prenume)
            </dd>
        </dl>

        <div class="form-group">
            @Html.LabelFor(model => model.IdDiagnostic, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdDiagnostic, new SelectList(ViewBag.Diagnostics, "Value", "Text"),
                                        "Diagnostic", new { @class = "form-control form-title" })
                @Html.ValidationMessage("IdDiagnostic", null, new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>

    </div>
}

