@model IEnumerable<Licenta2022.Models.Medicament>

@{
    ViewBag.Title = "Medicamente";
}

<h2>Medicamente</h2>

@if (ViewBag.IsAdmin)
{
    <div class="btn-group">
        <button><a href="/Medicament/Create">Creează</a></button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Denumire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observatii)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observatii)
            </td>
            <td>
                <div class="btn-group">
                    <button><a href="/Medicament/Details/@item.Id">Detalii</a></button>
                </div>
            </td>
        </tr>
    }

</table>
