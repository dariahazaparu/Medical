@model Licenta2022.Models.DoctorInput

@{
    ViewBag.Title = "Create";
}

<h2>Creează doctor</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nume, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nume, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nume, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prenume, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prenume, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prenume, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Data angajării</label>
            <div class="col-md-10">
                <input type="date" name="DataAngajarii" class="form-control" />
                @Html.ValidationMessageFor(model => model.DataAngajarii, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Specializare</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdSpecializare, new SelectList(ViewBag.Specialitati, "Value", "Text"),
                                        "Specializare", new { @class = "form-control form-title" })
                @Html.ValidationMessage("IdSpecializare", null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
        <lable  class="control-label col-md-2"><b>Clinica</b></lable>         
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdClinica, new SelectList(ViewBag.Clinici, "Value", "Text"),
                                        "Clinica", new { @class = "form-control form-title" })
                @Html.ValidationMessage("IdClinica", null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
